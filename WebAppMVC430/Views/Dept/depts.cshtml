@model List<Department>

@{
    Layout = "_MohitLayout";
}

<h1>@ViewData["Title"]</h1>
<h2>@ViewData["desc"]</h2>
@*<img src="~/images/no-image.png" asp-append-version="true" />*@

<a  asp-action="create" asp-controller="dept" class="btn btn-primary">Create Department</a>

<table class="table table-bordered table-hover table-striped">
<tr>
        <th>Id</th>
        <th>DName</th>
        <th>Loc</th>
        <th>Cover</th>

        <th>Action</th>

</tr>
@foreach(var dept in Model)
{
    <tr>
            <td>@dept.Id</td>
            <td>@dept.DName</td>
            <td>@dept.Loc</td>
            <td><img src="images/@dept.CoverImage" height="30" width="40"/></td>

            <td>
                @*<a href="/dept/detail/@dept.Id" class="btn btn-primary">View</a>*@
                @*@Html.ActionLink("View","Detail","Dept",new {id=dept.Id})*@
                <a asp-action="detail" asp-controller="Dept" asp-route-id="@dept.Id">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </td>
    </tr>
}

</table>